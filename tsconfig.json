{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2020",
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "removeComments": true,
    "strict": true,
    "noLib": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "Node",
    "outDir": "dist/esm",
    "sourceMap": true,
    "allowJs": true,
    "lib": ["es7", "DOM"]
  },
  "include": ["lib/**/*"],
  "exclude": ["node_modules"]
}
